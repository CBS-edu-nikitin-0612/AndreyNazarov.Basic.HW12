        <Button x:Name="ButtonDiv" Content="/" HorizontalAlignment="Left" Height="33" Margin="157,49,0,0" VerticalAlignment="Top" Width="44" Click="ButtonDiv_Click"/>
        <Button x:Name="ButtonEnter" Content="Enter" HorizontalAlignment="Left" Height="33" Margin="10,87,0,0" VerticalAlignment="Top" Width="191" Click="ButtonEnter_Click"/>
        <TextBlock x:Name="TextBlockExceprion" HorizontalAlignment="Left" Height="164" Margin="10,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsEnabled="False"/>

    </Grid>
</Window>
